@model HomePageNewsItemsModel
@using Nop.Web.Models.News;
@if (Model.NewsItems.Count > 0)
{

<h3 class="widget-title">Lastest News</h3>
            <div id="recent-post-loop" class="swiper-container swiper-container-recent swiper-container-horizontal">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        @{int i = 0;}
@foreach (var item in Model.NewsItems)
{    
    if (i == 1) { 
    <li data-target="#carousel-example-generic" data-slide-to="@item.Id" class="active"></li>
    }
    else
    {
    <li data-target="#carousel-example-generic" data-slide-to="@item.Id" ></li>    
    }
    i++;
}
                    </ol>

                    <!-- Wrapper for slides -->
                    @{int k = 0;}
                    <div class="carousel-inner" role="listbox">
@foreach (var item in Model.NewsItems)
{
    if (k == 1) { 
                        <div class="item active">
                            <div class="swiper-slide swiper-slide-duplicate" data-swiper-slide-index="@item.Id" style="width: 100%;">
                                <div class="news-item row clearfix">
                                    
                                    <div class="col-sm-12 column">
                                        <h4><a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@item.Title</a></h4>

                                        <p class="byline vcard post-meta">
                                            <time class="updated" datetime="@item.CreatedOn.ToString("D")">
                                                @item.CreatedOn.ToString("D")
                                            </time>

                                        </p>
                                    </div>
                                    <div class="col-sm-12 column">
                                        <p></p><span class="post-exc">@Html.Raw(item.Short)</span>
                                        <div class="buttons">
                                            <a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" class="read-more">@T("News.MoreInfo")</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
    }
    else
    {
         <div class="item">
                            <div class="swiper-slide swiper-slide-duplicate" data-swiper-slide-index="@item.Id" style="width: 100%;">
                                <div class="news-item row clearfix">
                                    
                                    <div class="col-sm-12 column">
                                        <h4><a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@item.Title</a></h4>

                                        <p class="byline vcard post-meta">
                                            <time class="updated" datetime="@item.CreatedOn.ToString("D")">
                                                @item.CreatedOn.ToString("D")
                                            </time>

                                        </p>
                                    </div>
                                    <div class="col-sm-12 column">
                                        <p></p><span class="post-exc">@Html.Raw(item.Short)</span>
                                        <div class="buttons">
                                            <a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" class="read-more">Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
    }
    k++;
                         
            }
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="swiper-wrapper" style="transition-duration: 0ms; transform: translate3d(-840px, 0px, 0px);">
                  
                </div>
            </div>
    
     

}